{
    "name": "pavelmaksimov25/spryker-feature-remover",
    "description": "This tool helps a developer to remove spryker features in the semi-automatical way.",
    "license": "proprietary",
    "type": "project",
    "authors": [
        {
            "name": "Pavlo Maksymov",
            "email": "pavlo.maksymov@spryker.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^5.4 || ^6.0",
        "symfony/flex": "^2.3",
        "symfony/runtime": "^5.4 || ^6.0",
        "symfony/framework-bundle": "^5.4 || ^6.0",
        "symfony/yaml": "^5.4 || ^6.0",
        "spryker-sdk/sdk-contracts": "^0.4.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "spryker/code-sniffer": "^0.17.18",
        "symfony/phpunit-bridge": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "SprykerSdk\\SprykerFeatureRemover\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdkTests\\": "tests/",
            "SprykerSdkTests\\Stub\\": "tests/Stub"
        },
        "exclude-from-classmap": ["/tests/__data"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyze",
        "linters": [
            "@cs-fix",
            "@cs-check",
            "@stan"
        ],
        "tests": "bin/phpunit",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "bin": [
        "bin/packrem"
    ]
}
